<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"

    >


    <!--banner-->
    <ImageView
        android:id="@+id/home_banner"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:contentDescription="@string/desc"
        />
    <!-- members -->
    <ImageView

        android:id="@+id/icon_members"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/but_members"
        android:paddingBottom="4dp"
        android:contentDescription="@null"
        />

    <Button
        android:id="@+id/but_members"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="@string/but_members"
        android:textIsSelectable="true"
        android:onClick="goToMembers"
        />
    <!-- services -->
    <ImageView
        android:id="@+id/icon_services"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/but_services"
        android:paddingBottom="4dp"
        android:contentDescription="@null"
        />

    <Button
        android:id="@+id/but_services"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/but_services"
        android:textIsSelectable="true"
        android:onClick="goToServices"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        style="@style/btnStyleOrange"
        />
    <!--android:textColor="@color/deeporange100"-->
    <!--android:shadowColor="@color/button_material_light" -->


</RelativeLayout>
